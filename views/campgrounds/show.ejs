<% layout('layouts/boilerplate') %>

<div class="row">
  <div class="col-6 mx-auto">
    <div class="card mb-3">
      <img src="<%= campgroundInfo.image %>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%= campgroundInfo.title %></h5>
        <p class="card-text"><%= campgroundInfo.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted">
          <%= campgroundInfo.location %>
        </li>
        <li class="list-group-item">$ <%= campgroundInfo.price %> / night</li>
      </ul>
      <div class="card-body">
        <a
          href="/campgrounds/<%= campgroundInfo._id %>/edit"
          class="card-link btn btn-info"
          >Edit</a
        >
        <form
          class="card-link d-inline"
          action="/campgrounds/<%= campgroundInfo._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <div class="card-footer text-muted">2 days ago</div>
    </div>
  </div>
</div>
